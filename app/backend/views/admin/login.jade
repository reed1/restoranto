
extends ./layout

block content
  .container(style='margin-top: 30px;')

    .col-md-4.col-md-offset-4
      .panel.panel-default
        .panel-heading
          h3.panel-title
            strong Sign in

        .panel-body
          form(method='post', role='form')

            .form-group
              label(for='email') Email
              input#email.form-control(
                type='email',
                name='email',
                placeholder='Enter email',
                autofocus,
                required
              )

            .form-group
              label(for='password') Password
              input#password.form-control(
                type='password',
                name='password',
                placeholder='Password',
                required
              )

            .row
              .col-xs-6
                button.btn.btn-sm.btn-default(type='submit') Sign in
              .col-xs-6
                a(href='./forgot-password')
                  small (forgot password)

  .container.center
    .col-md-4.col-md-offset-4

      if flash === 'unauthorized'
        .alert.alert-warning
          | <strong>Unauthorized!</strong> You Are

      if flash === 'bad-auth'
        .alert.alert-danger
          | <strong>Bad Auth!</strong> You Are

